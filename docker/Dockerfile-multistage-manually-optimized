    && rm ./client_search_grpc_soa/src/bin/*.rs   \
    && rm ./common/src/*.rs                       \
    && rm ./proc_macro/src/*.rs                   \
    && rm ./error_macro/src/*.rs                  \
    && rm ./health_check/src/*.rs                 \
    && rm ./tuple_heter_iter/src/*.rs             \
    && rm ./tuple_heter_iter_macro/src/*.rs       \
    && rm ./xtask/src/*.rs

